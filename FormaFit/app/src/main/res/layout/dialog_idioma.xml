<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/backgroud_white_rounded"
        android:backgroundTint="@color/buttons_color_rosa"
        android:fontFamily="@font/barlowsemicondensedsemibold"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/idioma"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="6dp">

        <RadioButton
            android:id="@+id/radioButtonEspanol"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/barlowsemicondensedsemibold"
            android:text="@string/espanol"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButtonIngles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/barlowsemicondensedsemibold"
            android:text="@string/ingles"
            android:textSize="20sp" />

    </RadioGroup>
</LinearLayout>